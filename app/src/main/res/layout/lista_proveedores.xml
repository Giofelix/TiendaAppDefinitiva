<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/lblNombres"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nombres"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="xxxxx"
        android:layout_toRightOf="@id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/lblTelefono"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Telefono"
        android:layout_below="@id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/telefono"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="xxxxx"
        android:layout_toRightOf="@id/lblTelefono"
        android:layout_below="@id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/lblFechaRegistro"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Fecha Registro:"
        android:layout_below="@id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/fecharegistro"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="2024 -11 -02 21:22:13"
        android:layout_toRightOf="@id/lblFechaRegistro"
        android:layout_below="@id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>